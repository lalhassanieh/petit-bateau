{%- comment -%}
  Size Guide Modal - Exact Petit Bateau Style
  Usage: {% render 'size-guide-modal' %}
{%- endcomment -%}

{%- assign unique_id = 'size-guide-' | append: section.id | append: '-' | append: forloop.index0 | default: 'main' -%}

<!-- Size Guide Trigger Button -->
<button id="{{ unique_id }}-trigger" class="size-guide-btn" type="button">
  Guide des tailles
</button>

<!-- Size Guide Modal Structure - Exact Petit Bateau Design -->
<div id="{{ unique_id }}-modal" class="pb-size-guide-modal" role="dialog" aria-labelledby="{{ unique_id }}-title" aria-hidden="true">
  <div class="pb-modal-overlay"></div>
  <div class="pb-modal-container">
    <div class="pb-modal-header">
      <h1 class="pb-modal-title">GUIDE DES TAILLES</h1>
      <button type="button" class="pb-modal-close" id="{{ unique_id }}-close" aria-label="Fermer">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
          <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
      </button>
    </div>
    
    <div class="pb-modal-body">
      <!-- Tab Navigation -->
      <div class="pb-tab-navigation">
        <button class="pb-tab-btn active" data-tab="univers">UNIVERS</button>
        <button class="pb-tab-btn" data-tab="vetement">VÊTEMENT</button>
        <button class="pb-tab-btn" data-tab="taille">TAILLE</button>
      </div>
      
      <!-- Tab Content -->
      <div class="pb-tab-content">
        <!-- UNIVERS Tab -->
        <div id="tab-univers" class="pb-tab-panel active">
          <div class="pb-category-grid">
            <div class="pb-category-card" data-category="bebe">
              <div class="pb-category-image">
                <img src="https://cdn.shopify.com/s/files/1/0234/5678/files/bebe-guide.jpg?v=1" alt="Bébé" loading="lazy">
              </div>
              <h3 class="pb-category-title">Bébé</h3>
            </div>
            
            <div class="pb-category-card" data-category="fille">
              <div class="pb-category-image">
                <img src="https://cdn.shopify.com/s/files/1/0234/5678/files/fille-guide.jpg?v=1" alt="Fille" loading="lazy">
              </div>
              <h3 class="pb-category-title">Fille</h3>
            </div>
            
            <div class="pb-category-card" data-category="garcon">
              <div class="pb-category-image">
                <img src="https://cdn.shopify.com/s/files/1/0234/5678/files/garcon-guide.jpg?v=1" alt="Garçon" loading="lazy">
              </div>
              <h3 class="pb-category-title">Garçon</h3>
            </div>
            
            <div class="pb-category-card" data-category="femme">
              <div class="pb-category-image">
                <img src="https://cdn.shopify.com/s/files/1/0234/5678/files/femme-guide.jpg?v=1" alt="Femme" loading="lazy">
              </div>
              <h3 class="pb-category-title">Femme</h3>
            </div>
          </div>
        </div>
        
        <!-- VÊTEMENT Tab -->
        <div id="tab-vetement" class="pb-tab-panel">
          <div class="pb-clothing-categories">
            <div class="pb-clothing-item" data-clothing="gigoteuse">
              <h4>Gigoteuses</h4>
              <p>Guide spécifique pour les turbulettes et gigoteuses</p>
            </div>
            <div class="pb-clothing-item" data-clothing="pyjama">
              <h4>Pyjamas</h4>
              <p>Tailles pour les vêtements de nuit</p>
            </div>
            <div class="pb-clothing-item" data-clothing="vetements">
              <h4>Vêtements</h4>
              <p>Guide général pour tous les vêtements</p>
            </div>
          </div>
        </div>
        
        <!-- TAILLE Tab -->
        <div id="tab-taille" class="pb-tab-panel">
          <!-- Dynamic size guide content based on product -->
          <div class="pb-size-content">
            {%- if product.type contains 'Gigoteuse' or product.title contains 'Gigoteuse' -%}
              <div class="pb-size-table-wrapper">
                <h3>Guide des tailles - Gigoteuses</h3>
                <table class="pb-size-table">
                  <thead>
                    <tr>
                      <th>Taille</th>
                      <th>Âge</th>
                      <th>Hauteur (cm)</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td><strong>T0</strong></td>
                      <td>Naissance/6 mois</td>
                      <td>63,2 cm</td>
                    </tr>
                    <tr>
                      <td><strong>T1</strong></td>
                      <td>6/18 mois</td>
                      <td>77,9 cm</td>
                    </tr>
                    <tr>
                      <td><strong>T2</strong></td>
                      <td>18/36 mois</td>
                      <td>91,9 cm</td>
                    </tr>
                  </tbody>
                </table>
                
                <div class="pb-tog-info">
                  <h4>Information TOG</h4>
                  <p><strong>TOG :</strong> Bien choisir les vêtements selon la température de la chambre.</p>
                  <ul>
                    <li><strong>Moins de 1,0 TOG :</strong> 22°C à 27°C</li>
                    <li><strong>1 à 2 TOG :</strong> 18°C à 22°C</li>
                    <li><strong>2 à 3 TOG :</strong> 16°C à 18°C</li>
                    <li><strong>3 à 3,5 TOG :</strong> 13°C à 16°C</li>
                  </ul>
                </div>
              </div>
            {%- else -%}
              <div class="pb-size-table-wrapper">
                <h3>Guide des tailles</h3>
                <table class="pb-size-table">
                  <thead>
                    <tr>
                      <th>Taille</th>
                      <th>Âge</th>
                      <th>Hauteur (cm)</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td><strong>3A</strong></td>
                      <td>3 ans</td>
                      <td>94-100</td>
                    </tr>
                    <tr>
                      <td><strong>4A</strong></td>
                      <td>4 ans</td>
                      <td>100-106</td>
                    </tr>
                    <tr>
                      <td><strong>5A</strong></td>
                      <td>5 ans</td>
                      <td>106-112</td>
                    </tr>
                    <tr>
                      <td><strong>6A</strong></td>
                      <td>6 ans</td>
                      <td>112-118</td>
                    </tr>
                    <tr>
                      <td><strong>8A</strong></td>
                      <td>8 ans</td>
                      <td>118-128</td>
                    </tr>
                    <tr>
                      <td><strong>10A</strong></td>
                      <td>10 ans</td>
                      <td>128-138</td>
                    </tr>
                    <tr>
                      <td><strong>12A</strong></td>
                      <td>12 ans</td>
                      <td>138-148</td>
                    </tr>
                  </tbody>
                </table>
              </div>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Exact Petit Bateau Styles -->
<style>
/* Reset and base styles */
.size-guide-btn {
  background: transparent;
  color: #0066cc;
  border: none;
  padding: 0;
  font-size: 14px;
  font-weight: normal;
  cursor: pointer;
  text-decoration: underline;
  font-family: inherit;
}

.size-guide-btn:hover {
  color: #004499;
}

/* Modal container */
.pb-size-guide-modal {
  display: none;
  position: fixed;
  z-index: 9999;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.pb-size-guide-modal.show {
  opacity: 1;
}

.pb-modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  cursor: pointer;
}

.pb-modal-container {
  background: #fff;
  margin: 20px auto;
  width: 90%;
  max-width: 900px;
  height: 90vh;
  border-radius: 0;
  position: relative;
  display: flex;
  flex-direction: column;
  animation: modalSlideIn 0.3s ease;
}

@keyframes modalSlideIn {
  from {
    transform: translateY(-30px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* Header */
.pb-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30px 40px;
  border-bottom: 1px solid #e0e0e0;
  background: #fff;
}

.pb-modal-title {
  font-family: Arial, sans-serif;
  font-size: 28px;
  font-weight: bold;
  color: #003366;
  margin: 0;
  letter-spacing: 1px;
}

.pb-modal-close {
  background: none;
  border: none;
  cursor: pointer;
  color: #666;
  padding: 5px;
  font-size: 24px;
  line-height: 1;
}

.pb-modal-close:hover {
  color: #333;
}

/* Modal body */
.pb-modal-body {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* Tab navigation */
.pb-tab-navigation {
  display: flex;
  background: #f8f8f8;
  border-bottom: 1px solid #e0e0e0;
}

.pb-tab-btn {
  flex: 1;
  background: transparent;
  border: none;
  padding: 20px;
  font-size: 16px;
  font-weight: 600;
  color: #666;
  cursor: pointer;
  position: relative;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  transition: all 0.2s ease;
}

.pb-tab-btn:hover {
  color: #003366;
  background: #f0f0f0;
}

.pb-tab-btn.active {
  color: #003366;
  background: #fff;
}

.pb-tab-btn.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: #003366;
}

/* Tab content */
.pb-tab-content {
  flex: 1;
  overflow-y: auto;
  padding: 40px;
}

.pb-tab-panel {
  display: none;
}

.pb-tab-panel.active {
  display: block;
}

/* Category grid */
.pb-category-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 30px;
  max-width: 800px;
}

.pb-category-card {
  text-align: center;
  cursor: pointer;
  transition: transform 0.2s ease;
}

.pb-category-card:hover {
  transform: translateY(-5px);
}

.pb-category-image {
  width: 180px;
  height: 220px;
  margin: 0 auto 20px;
  border-radius: 8px;
  overflow: hidden;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pb-category-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.pb-category-title {
  font-size: 18px;
  font-weight: 600;
  color: #003366;
  margin: 0;
}

/* Clothing categories */
.pb-clothing-categories {
  max-width: 600px;
}

.pb-clothing-item {
  padding: 20px;
  border: 1px solid #e0e0e0;
  margin-bottom: 15px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.pb-clothing-item:hover {
  border-color: #003366;
  background: #f9f9f9;
}

.pb-clothing-item h4 {
  margin: 0 0 8px 0;
  color: #003366;
  font-size: 16px;
  font-weight: 600;
}

.pb-clothing-item p {
  margin: 0;
  color: #666;
  font-size: 14px;
}

/* Size content */
.pb-size-content {
  max-width: 600px;
}

.pb-size-content h3 {
  color: #003366;
  font-size: 20px;
  margin-bottom: 20px;
  font-weight: 600;
}

.pb-size-table-wrapper {
  margin-bottom: 30px;
}

.pb-size-table {
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 20px;
}

.pb-size-table th,
.pb-size-table td {
  border: 1px solid #ddd;
  padding: 12px;
  text-align: center;
  font-size: 14px;
}

.pb-size-table th {
  background: #f8f8f8;
  font-weight: 600;
  color: #333;
}

.pb-size-table td {
  color: #555;
}

.pb-size-table tbody tr:hover {
  background: #f9f9f9;
}

.pb-tog-info {
  background: #f8f9fa;
  padding: 20px;
  border-radius: 4px;
}

.pb-tog-info h4 {
  margin: 0 0 10px 0;
  color: #003366;
  font-size: 16px;
}

.pb-tog-info p {
  margin: 0 0 10px 0;
  font-size: 14px;
  color: #555;
}

.pb-tog-info ul {
  margin: 10px 0 0 0;
  padding: 0 0 0 20px;
  font-size: 14px;
  color: #555;
}

.pb-tog-info li {
  margin-bottom: 5px;
}

/* Mobile responsive */
@media (max-width: 768px) {
  .pb-modal-container {
    width: 95%;
    height: 95vh;
  }
  
  .pb-modal-header {
    padding: 20px;
  }
  
  .pb-modal-title {
    font-size: 22px;
  }
  
  .pb-tab-content {
    padding: 20px;
  }
  
  .pb-category-grid {
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 20px;
  }
  
  .pb-category-image {
    width: 140px;
    height: 170px;
  }
  
  .pb-tab-btn {
    padding: 15px 10px;
    font-size: 14px;
  }
}

/* Accessibility */
.pb-size-guide-modal[aria-hidden="true"] {
  display: none;
}

.pb-size-guide-modal[aria-hidden="false"] {
  display: block;
}

.pb-tab-btn:focus,
.pb-modal-close:focus,
.size-guide-btn:focus {
  outline: 2px solid #0066cc;
  outline-offset: 2px;
}
</style>
<!-- Enhanced JavaScript with Tab Functionality -->
<script>
(function() {
  'use strict';
  
  const uniqueId = '{{ unique_id }}';
  const modal = document.getElementById(uniqueId + '-modal');
  const trigger = document.getElementById(uniqueId + '-trigger');
  const closeBtn = document.getElementById(uniqueId + '-close');
  const overlay = modal?.querySelector('.pb-modal-overlay');
  
  if (!modal || !trigger || !closeBtn) return;
  
  // Tab functionality
  function initTabs() {
    const tabBtns = modal.querySelectorAll('.pb-tab-btn');
    const tabPanels = modal.querySelectorAll('.pb-tab-panel');
    
    tabBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        const targetTab = this.getAttribute('data-tab');
        
        // Remove active class from all tabs and panels
        tabBtns.forEach(b => b.classList.remove('active'));
        tabPanels.forEach(p => p.classList.remove('active'));
        
        // Add active class to current tab and panel
        this.classList.add('active');
        const targetPanel = modal.querySelector('#tab-' + targetTab);
        if (targetPanel) {
          targetPanel.classList.add('active');
        }
      });
    });
    
    // Category card clicks
    const categoryCards = modal.querySelectorAll('.pb-category-card');
    categoryCards.forEach(card => {
      card.addEventListener('click', function() {
        // Switch to TAILLE tab
        tabBtns.forEach(b => b.classList.remove('active'));
        tabPanels.forEach(p => p.classList.remove('active'));
        
        const tailleTab = modal.querySelector('[data-tab="taille"]');
        const taillePanel = modal.querySelector('#tab-taille');
        
        if (tailleTab && taillePanel) {
          tailleTab.classList.add('active');
          taillePanel.classList.add('active');
        }
      });
    });
    
    // Clothing item clicks
    const clothingItems = modal.querySelectorAll('.pb-clothing-item');
    clothingItems.forEach(item => {
      item.addEventListener('click', function() {
        // Switch to TAILLE tab
        tabBtns.forEach(b => b.classList.remove('active'));
        tabPanels.forEach(p => p.classList.remove('active'));
        
        const tailleTab = modal.querySelector('[data-tab="taille"]');
        const taillePanel = modal.querySelector('#tab-taille');
        
        if (tailleTab && taillePanel) {
          tailleTab.classList.add('active');
          taillePanel.classList.add('active');
        }
      });
    });
  }
  
  // Open modal
  function openModal() {
    modal.style.display = 'block';
    modal.setAttribute('aria-hidden', 'false');
    document.body.style.overflow = 'hidden';
    
    // Add show class for animation
    requestAnimationFrame(() => {
      modal.classList.add('show');
    });
    
    // Initialize tabs
    initTabs();
    
    // Focus management
    const firstTab = modal.querySelector('.pb-tab-btn');
    if (firstTab) {
      firstTab.focus();
    }
    
    // Trap focus within modal
    trapFocus(modal);
  }
  
  // Close modal
  function closeModal() {
    modal.classList.remove('show');
    
    setTimeout(() => {
      modal.style.display = 'none';
      modal.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
      trigger.focus(); // Return focus to trigger
    }, 300);
  }
  
  // Focus trap helper
  function trapFocus(element) {
    const focusableElements = element.querySelectorAll(
      'button, [href], input, select, textarea, [tabindex]:not([tabindex="-1"])'
    );
    const firstElement = focusableElements[0];
    const lastElement = focusableElements[focusableElements.length - 1];
    
    element.addEventListener('keydown', function(e) {
      if (e.key === 'Tab') {
        if (e.shiftKey) {
          if (document.activeElement === firstElement) {
            lastElement.focus();
            e.preventDefault();
          }
        } else {
          if (document.activeElement === lastElement) {
            firstElement.focus();
            e.preventDefault();
          }
        }
      }
    });
  }
  
  // Event listeners
  trigger.addEventListener('click', openModal);
  closeBtn.addEventListener('click', closeModal);
  overlay?.addEventListener('click', closeModal);
  
  // Close on Escape key - only if this modal is open
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && modal.style.display === 'block') {
      closeModal();
    }
  });
  
  // Prevent modal content clicks from closing modal
  modal.querySelector('.pb-modal-container')?.addEventListener('click', function(e) {
    e.stopPropagation();
  });
})();
</script>